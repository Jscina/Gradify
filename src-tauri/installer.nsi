  ${EndIf}

  CreateShortcut "$COMMONDESKTOP\${PRODUCTNAME}.lnk" "$INSTDIR\${MAINBINARYNAME}.exe"
  !insertmacro SetLnkAppUserModelId "$COMMONDESKTOP\${PRODUCTNAME}.lnk"
FunctionEnd
